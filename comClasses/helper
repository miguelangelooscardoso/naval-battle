// Atributos publicos

class Jogador
{
public:  // Make the following members public
    string nome;
    char tabuleiro[LINHAS][COLUNAS];
    char tentativas[LINHAS][COLUNAS];
    int numeroJogadas;
    int pontos; // número de acertos
    bool ativo;

    Jogador(string nome); // construtor
    void inicializarMatriz(char matriz[LINHAS][COLUNAS]);
    void imprimir(char tabuleiro[LINHAS][COLUNAS], char tentativas[LINHAS][COLUNAS]);
    bool inserirTentativas(Jogador *jogador);
    void turnoJogador(Jogador *jogador, Jogador *adversario, bool *jogarNovamente);
};


// Getters and Setters

class Jogador
{
private:
    string nome;
    char tabuleiro[LINHAS][COLUNAS];
    char tentativas[LINHAS][COLUNAS];
    int numeroJogadas;
    int pontos; // número de acertos
    bool ativo;

public:
    Jogador(string nome); // construtor
    void inicializarMatriz(char matriz[LINHAS][COLUNAS]);
    void imprimir(char tabuleiro[LINHAS][COLUNAS], char tentativas[LINHAS][COLUNAS]);
    bool inserirTentativas(Jogador *jogador);
    void turnoJogador(Jogador *jogador, Jogador *adversario, bool *jogarNovamente);

    // Getter for tabuleiro
    char** getTabuleiro() {
        return tabuleiro;
    }

    // Getter for tentativas
    char** getTentativas() {
        return tentativas;
    }
};

// main.cpp
Jogador jogador1("Jogador 1");
Jogador jogador2("Jogador 2");

jogador1.getTabuleiro(); // Access tabuleiro
jogador2.getTentativas(); // Access tentativas
